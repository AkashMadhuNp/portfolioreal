rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Contact Messages Collection
    // Anyone can CREATE (submit contact form), but only you can READ (via Firebase Console)
    match /contact_messages/{messageId} {
      // Allow anyone to create a contact message with required fields
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'message', 'timestamp', 'recipientEmail'])
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.message is string
                    && request.resource.data.recipientEmail == '002akashakz@gmail.com';
      
      // Only authenticated users (you via Firebase Console) can read, update, or delete
      allow read, update, delete: if false;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
